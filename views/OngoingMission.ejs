<!-- <div class="ui main text container"> -->
<div class="ui main main-padding">
    
    <div class="ui huge centered header">The deal is on.</div>

        <a href="/missions/NewMission" class="ui large blue header">Ongoing Mission</a>
        <p></p>
        <!-- <br class="padding-1em"> -->
        <table id="missiontable" class="ui sortable single line table">
            <thead>
                <tr>
                  <th>Mission</th>
                  <th>Details</th>
                  <th>Start</th>
                  <th>End</th>
                  <th>Reward</th>
                  <th>Hunter</th>
                </tr>
            </thead>
            <tbody>
                
                <% ogM.forEach(function(mission){ %>
                <tr>
                    <td class="">
                        <a class="header ui ribbon label" href="/missions/<%= mission._id %>"><%= mission.title %></a>
                    </td>
                    <td>
                        <i class= "Angle Double Right small icon"></i>
                        <%= mission.details.substring(0,200) %>
                    </td>
                    <td>
                        <i class="Hourglass End small icon"></i>
                         <%= moment(mission.date_due).fromNow() %>
                    </td>

                    <td class="">
                        <i class="Hourglass Start small icon"></i>
                         <%= moment(mission.date_created).fromNow() %>
                    </td>

                    <td>
                         <i class="Money small icon"></i>
                         <%= mission.reward %>
                    </td>  

                    <!-- <td class="ui small basic button"> -->
                    <td class="selectable">
                        <a href="/missions/<%= mission._id %>"> 
                            <i class="Handshake small icon"></i> HunterNameGoesHere
                        </a>
                    </td>  
                </tr>
                      
                <% }) %>
                
            </tbody>  

