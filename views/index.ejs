<% include ./partials/header %>
   

<!-- <div class="ui main text container"> -->
<div class="ui main main-padding">
    
    <div class="ui huge centered header">Be the deal. Hunt the deal.</div>
    
        <div class="ui three column grid">

            <column class="ui three column">
            <a href="/missions/NewMission" class="ui large green header">New Mission</a>
                <% missions.forEach(function(mission){ %>
                    <div class="row">
                        <div class="ui segment">
                            <div class="item">
                              <!--   <div class="ui small image">
                                    <img src="<%= mission.image %>">
                                </div> -->
                                <div class="content">
                                    
                                    <a class="header" href="/missions/<%= mission._id %>"><%= mission.title %></a>
                                    
                                    <div class="meta segment">
                                        <span><%= mission.date_created.toLocaleDateString("en-UK", 
                                                { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) 
                                        %></span>    
                                        <span class="right-text">
                                             <%= moment(mission.date_created).fromNow() %>

                                        </span>

                                    </div>  

                                    <div class="meta">
                                        
                                    </div>

                                        <p>
                                            <%= mission.details.substring(0,50) %>...
                                            
                                        </p>    

                                       

                                    <div class="description">
                                        
                                    </div>
                                    <div class="extra">
                                        <a class="ui floated basic violet button" href="/missions/<%= mission._id %>">
                                            Read more <i class="right chevron small icon"></i>
                                            
                                            
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>    

                    </div>
                <% }) %>
            </column>   

            <column class="ui three column">
            <a href="/missions/OngoingMission" class="ui large blue header">Ongoing Mission</a>
                <% missions.forEach(function(mission){ %>
                        <div class="row">
                            <div class="ui segment">
                                <div class="item">
                                  <!--   <div class="ui small image">
