                                        <a class="header" href="/missions/<%= mission._id %>"><%= mission.title %></a>
                                        
                                        <div class="meta">
                                            <span><%= mission.date_created.toLocaleDateString("en-UK", 
                                                    { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) 
                                            %></span>    
                                        </div>  

                                        <div class="meta">
                                            <span>
                                                 <%= moment(mission.date_created).fromNow() %>

                                            </span>
                                        </div>


                                        <div class="description">
                                            
                                        </div>
                                        <div class="extra">
                                            <a class="ui floated basic violet button" href="/missions/<%= mission._id %>">
                                                Read more <i class="right chevron small icon"></i>
                                                
                                                
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>    

                        </div>
                    <% }) %>
            </column>

            <column class="ui three column">
            <a href="" class="ui large pink header">Completed Mission</a>
                <% missions.forEach(function(mission){ %>
                        <div class="row">
